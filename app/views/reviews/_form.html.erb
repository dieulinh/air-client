<div class="row">
  <h2>Your review</h2>
  <div class="col-md-12">
    <%= form_for([@room, @room.reviews.new]) do |f| %>
      <%= f.text_field :star %>
      <%= f.text_field :comment %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>