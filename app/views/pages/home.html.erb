<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "Where are you going?", class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= text_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<br>

<div class="row text-center">
  <h2>Just for the weekend</h2>
  <p> Discover new, inspiring places close to home.</p>
</div>

<br>

<div class="row">
  <%= link_to "/search?utf8=✓&search=New+York&start_date=&end_date=&commit=Search" do %>
    <div class="col-md-4 col-sm-12">
      <div class="discovery-card" style="background-image: url(<%= image_path('New_York.jpg') %>)">
        <div class="va-container">
          <div class="va-middle text-center">
            <h2>
              <strong>New York</strong>
            </h2>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= link_to "/search?utf8=✓&search=London&start_date=&end_date=&commit=Search" do %>
    <div class="col-md-4 col-sm-12">
      <div class="discovery-card" style="background-image: url(<%= image_path('London.jpg') %>)">
        <div class="va-container">
          <div class="va-middle text-center">
            <h2>
              <strong>London</strong>
            </h2>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= link_to "/search?utf8=✓&search=Berlin&start_date=&end_date=&commit=Search" do %>
    <div class="col-md-4 col-sm-12">

      <div class="discovery-card" style="background-image: url(<%= image_path('Berlin.jpg') %>)">
        <div class="va-container">
          <div class="va-middle text-center">
            <h2>
              <strong>Berlin</strong>
            </h2>
          </div>
        </div>
      </div>

    </div>
  <% end %>

</div>

<br>

<div class="row text-center">
  <h2> Explore the world</h2>
  <p>See what people are travelling, all around the world</p>
</div>

<div class="row">
  <div class="col-md-12">
    <% @rooms.each do |room| %>
      <div class="col-md-4">
        <%= image_tag room_url(room, "medium") %>
        <br>
        <%= image_tag gravatar_for(room.user), class: "img-circle avatar-small" %>
        <%= link_to room_path(room) do %>
          <%= room.listing_name %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
