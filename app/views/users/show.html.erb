<div class="row">
  <div class="col-md-3">
    <div class="center">
      <%= image_tag gravatar_for(@user), class: "avatar-full" %>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">Verification</div>
      <div class="panel-body">
        Email Address<br>
        Phone Number
        <div class="row">
          <%= link_to conversations_path, method: :post, sender_id: current_user.id, recipient_id: @user.id do %>
            <div class="btn btn-primary"> Send Message</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <h2><%= @user.fullname %></h2>
    <h4> Listing (<%= @rooms.length %>) </h4><br>

    <% @rooms.each do |room| %>

      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading preview">
            <%= image_tag room.photos.first.image.url(:medium) if room.photos.length >0  %>
          </div>
          <div class="panel-body">
            <%= link_to room.listing_name, room_path(room) %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>